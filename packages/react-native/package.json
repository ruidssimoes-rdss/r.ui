{
  "name": "@r-ui/react-native",
  "version": "0.1.0",
  "description": "Universal React Native component library with beautiful defaults",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./tokens": {
      "import": "./dist/tokens/index.mjs",
      "require": "./dist/tokens/index.js",
      "types": "./dist/tokens/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "nativewind": "^4.0.0",
    "react": ">=18.0.0",
    "react-native": ">=0.72.0",
    "react-native-svg": ">=13.0.0"
  },
  "peerDependenciesMeta": {
    "react-native-svg": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-native": "^0.72.8",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "react-native",
    "ui",
    "components",
    "nativewind",
    "tailwind",
    "dark-mode",
    "glassmorphism"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruidssimoes/r-ui"
  },
  "files": [
    "dist"
  ]
}
